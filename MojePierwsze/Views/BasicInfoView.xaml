<UserControl x:Class="MojePierwsze.Views.BasicInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:MojePierwsze.Converters"
             mc:Ignorable="d"
             Height="Auto" Width="Auto">

    <UserControl.Resources>
        <conv:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:BoolToCursorConverter x:Key="BoolToCursorConverter"/>

        <Style x:Key="UnderlineTextBoxStyle" TargetType="TextBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#FFE0B0F0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="0"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter Property="BorderBrush" Value="#FFFF6B6B"/>
                    <Setter Property="IsReadOnly" Value="False"/>
                    <Setter Property="Cursor" Value="IBeam"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                    <Setter Property="IsReadOnly" Value="True"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#F3A7D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Content="⬅️ Wróć"
        Click="Back_Click"
        Style="{StaticResource MainButtonStyle}" 
        Width="100"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        Margin="10,0,0,0"
        />
        
        <Border Grid.Column="0"
                VerticalAlignment="Top"
                Margin="0,50,0,0"
                BorderBrush="#FFD1C4E9"
                Background="Transparent"
                BorderThickness="2"
                Height="200"
                Width="200"
                Cursor="{Binding IsEditing, Converter={StaticResource BoolToCursorConverter}}"
                MouseDown="ChangePhoto_Click">
            <Image Source="{Binding Photo}" Stretch="UniformToFill"/>
        </Border>

        <StackPanel Grid.Column="1" Margin="40,0,0,0" VerticalAlignment="Top">
            <TextBlock Text="Imię i nazwisko" FontWeight="Bold"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource UnderlineTextBoxStyle}"/>

            <TextBlock Text="Data urodzenia" FontWeight="Bold" Margin="0,10,0,0"/>
            <DatePicker x:Name="BirthDatePicker"
                        SelectedDate="{Binding BirthDate}"
                        SelectedDateChanged="BirthDatePicker_SelectedDateChanged"
                        IsEnabled="{Binding IsEditing}"
                        Margin="0,0,0,8"/>

            <TextBlock Text="Wzrost" FontWeight="Bold"/>
            <TextBox Text="{Binding Height}"
                     Style="{StaticResource UnderlineTextBoxStyle}"/>

            <TextBlock Text="Waga" FontWeight="Bold"/>
            <TextBox Text="{Binding Weight}"
                     Style="{StaticResource UnderlineTextBoxStyle}"/>

            <TextBlock Text="Ulubione zabawki / zainteresowania" FontWeight="Bold"/>
            <TextBox Text="{Binding FavoriteToys}"
                     Style="{StaticResource UnderlineTextBoxStyle}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,30,0,0">
                <Button Content="Edytuj"
                        Click="EditButton_Click"
                        Style="{StaticResource MainButtonStyle}" 
                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}"
                        Margin="0,0,10,0"/>

                <Button Content="Zapisz"
                        Click="SaveButton_Click"
                        Style="{StaticResource MainButtonStyle}" 
                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                        Margin="0,0,10,0"/>

                <Button Content="Anuluj"
                        Click="CancelButton_Click"
                        Style="{StaticResource MainButtonStyle}" 
                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                        Margin="0,0,10,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>