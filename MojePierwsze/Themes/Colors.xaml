<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Paleta pastelowa -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFF8F9FC" />

    <!-- Różowe akcenty -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#FFE3A5C7" />
    <!-- pastelowy róż -->
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#FFD67BAE" />
    <!-- ciemniejszy róż -->

    <!-- Fioletowy dodatek -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FFB39DDB" />
    <!-- lawendowy -->

    <!-- Tekst -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FF3A2E3F" />
    <!-- ciemny fiolet -->
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#993A2E3F" />

    <!-- Przyciski -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FFE3A5C7" />
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#FFD67BAE" />
</ResourceDictionary>